@model Categoria

@{
    ViewData["Title"] = "Editar categoria";
}

<h1>Editar categoria: @Model.nombre</h1>
<h5>Una categoria nos permite indicar en que gastamos nuestro dinero,tambien,de donde provienen nuestros ingresos.</h5>

<form  asp-action="Editar">
     <div asp-validation-summary="ModelOnly" class="text-danger"> </div> 
   @* asp-validation-summary sirve para visualizar los errores all toma todos los errores, modelOnly los del modelo*@ 
    <input type="hidden" asp-for="id" />
    
    <div class="mb-3">
        <label asp-for="nombre" class="form-label"></label>
        <input type="text" asp-for="nombre" class="form-control" />
        <span asp-validation-for="nombre" class="text-danger"></span>
    </div>
    
    <div class="mb-3">
        <label asp-for="tipoOperacionId" class="form-label"></label>
        <select asp-for="tipoOperacionId" asp-items="Html.GetEnumSelectList<TipoOperacion>()" 
            class="form-select"></select>
        <span asp-validation-for="tipoOperacionId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Enviar</button>
    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
</form>

@section Scripts{
    @* JqueryValidation *@
    <partial name="_ValidationScriptsPartial" /> 
    
    
}